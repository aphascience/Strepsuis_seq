nextflow_process {

    name "Test Process COMBINE_OUTPUTS"
    script "modules/combineoutputs.nf"
    process "COMBINE_OUTPUTS"

    test("Should run without failures") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = file("${projectDir}/tests/data/recN_table.tsv")
                input[1] = file("${projectDir}/tests/data/mlst_table.tsv")
                input[2] = file("${projectDir}/tests/data/serotype_table.tsv")
                input[3] = file("${projectDir}/tests/data/virulence_table.tsv")
                input[4] = file("${projectDir}/tests/data/verification.csv")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
