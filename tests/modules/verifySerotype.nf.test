nextflow_process {

    name "Test Process VERIFY_SEROTYPE"
    script "modules/verifySerotype.nf"
    process "VERIFY_SEROTYPE"

    test("Should verify serotype against know SNPs") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = ["test", "1", file("${projectDir}/tests/data/input_S999_R1_001.fastq.gz"), file("${projectDir}/tests/data/input_S999_R2_001.fastq.gz")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
