nextflow_process {

    name "Test Process SRST2_SEROTYPE"
    script "modules/srst2_serotype.nf"
    process "SRST2_SEROTYPE"

    test("Should map reads to serotype reference") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = ["test", file("${projectDir}/tests/data/input_S999_R1_001.fastq.gz"), file("${projectDir}/tests/data/input_S999_R2_001.fastq.gz")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
