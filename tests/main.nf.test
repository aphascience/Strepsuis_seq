nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
                reads = "${projectDir}/tests/data/*_{S*_R1,S*_R2}*.fastq.gz"
                outdir = "tests/results"
            }
        }

        then {
            assert workflow.success
        }

    }

}
